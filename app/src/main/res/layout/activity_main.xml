<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_location"></ImageView>


        <TextView
            android:id="@+id/txtCiudad"

            android:layout_width="206dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtGrados"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="60dp"
            android:gravity="center"

            android:text="New Zealand"
            android:textColor="#677AE1"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>





    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/likeImageView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_luna"></com.airbnb.lottie.LottieAnimationView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:layout_marginBottom="50dp"
        app:cardCornerRadius="20sp"
        app:cardElevation="10sp"

        android:layout_height="match_parent"
        >

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent"
       android:background="@drawable/shape"
       >
    <TextView

        android:id="@+id/txtGrados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="110dp"
        android:gravity="center"
        android:text="27Â°"
        android:textColor="@color/white"
        android:textSize="75sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_centerHorizontal="true"

        android:textColor="@color/white"
        android:layout_marginStart="110dp"

        android:layout_marginEnd="110dp"
        android:gravity="center"
        android:text="Sunny"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>
       </LinearLayout>


    </androidx.cardview.widget.CardView>






</LinearLayout>